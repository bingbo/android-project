<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.zhangbingbing.myapplication.StoreDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_name"
            android:text="name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_name"
            android:hint="输入用户名"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_password"
            android:text="name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_password"
            android:hint="输入密码"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_email"
            android:text="name"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edit_email"
            android:hint="输入邮箱"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:onClick="saveDataToPreference"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:id="@+id/save_to_preference"
            android:text="save to preference"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="saveDataToFile"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:id="@+id/save_to_file"
            android:text="save to file"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="saveDataToSqlite"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:id="@+id/save_to_sqlite"
            android:text="save to sqlite"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="getDataFromPreference"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:id="@+id/get_data_from_preference"
            android:text="get data from preference"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
